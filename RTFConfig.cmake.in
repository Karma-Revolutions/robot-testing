set(RTF_VERSION @RTF_VERSION@)

@PACKAGE_INIT@

set_and_check(RTF_INCLUDEDIR "@PACKAGE_RTF_INCLUDEDIR@")

if(NOT TARGET RTF::RTF)
  include("${CMAKE_CURRENT_LIST_DIR}/RTFTargets.cmake")
endif()

set(RTF_LIBRARIES RTF::RTF)
set(RTF_INCLUDE_DIRS "${RTF_INCLUDEDIR}")

if(TARGET RTF::RTF_sharedlib++)
  set(RTF_SHAREDLIBXX_FOUND TRUE)
  set_and_check(RTF_SHAREDLIBXX_INCLUDEDIR "@PACKAGE_RTF_SHAREDLIBXX_INCLUDEDIR@")
  list(APPEND RTF_LIBRARIES RTF::RTF_sharedlib++)
  list(APPEND RTF_INCLUDE_DIRS "${RTF_SHAREDLIBXX_INCLUDEDIR}")
else()
  set(RTF_SHAREDLIBXX_FOUND FALSE)
endif()

check_required_components(RTF)
